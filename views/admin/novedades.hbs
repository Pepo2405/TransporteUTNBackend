<div style="margin-top:50px; padding:0 50px 0 50px;">
  <div style="padding: 10px 20px 0px 20px;">
      {{! fila 1 }}
    <div style="display: flex; justify-content: space-between; width:100%; flex-grow:">
      <p style="gride-area:left top">Hola {{usuario}}!</p>
      <div>
        <a class="btn btn-danger" href="/admin/login/logout">
          Cerrar sesion
          <i class="fas fa-sign-out-alt"></i></a>
        </div>
    </div>
     {{! Fin fila 1 }}
     {{! Fila 2 }}
        <div style="display: flex; justify-content: space-between; width:100%; align-content: flex-end; margin-top:5px;margin-bottom:5px;">
        <h3>Listado de Novedades</h3>
        <a class="btn btn-success" href="/admin/novedades/agregar" style="font-size:14px;padding-bottom:2px"><i class="fa fa-plus" aria-hidden="true"> Nuevo</i></a>
        </div>
      {{!Fin fila 2}}
  </div>
  {{!Fila 3}}
    <div class="row">
        <div class="col">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                        <th scope="col">Imagen</th>
                        <th scope="col">Acciones</th>  
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td>{{{image}}}</td>
                        <td class="text-center">
                            <a href="/admin/novedades/modificar/{{id}}" class="btn btn-sm btn-secondary">
                            <i class="fa fa-pencil"></i></a>
                            <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-sm btn-secondary" style="background-color: red;">
                            <i class="fa fa-trash" ></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
  {{!Fin fila 3}}

</div>
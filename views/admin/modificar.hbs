<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar Novedad</h4>
            <form method="post" action="/admin/novedades/modificar" enctype="multipart/form-data" class="form-container">
                <input type="hidden" name="id" value="{{novedad.id}}">
                {{!-- Aca se cambia el titulo --}}
                <div class="form-group">
                    <input type="text" placeholder="Titulo"
                    value="{{novedad.titulo}}" class="form-control"
                    name="titulo">
                </div>
                {{!-- Aca se cambia el subtitulo --}}
                 <div class="form-group" style="margin-top: 10px">
                    <input type="text" placeholder="Subtitulo"
                    value="{{novedad.subtitulo}}" class="form-control"
                    name="subtitulo">
                </div>
                {{!-- Aca se cambia la imagen --}}
                <div class="form-group flex" >
                    <p class="cuadro-imagen" style="width:100%;display:flex;">
                        <label style="width: 100%;text-align:start">Imagen:<input class="form-control" type="file" name="image" id="image"></label>
                    </p>
                    <p>
                        <label><input type="checkbox" name="img_delete" id="img_delete" value="1" style="padding-left: 15px;"> Eliminar imagen actual?</label>
                        <input type="hidden" name="img_original" value="{{novedad.img_id}}">
                    </p>
                </div>
                {{!-- Aca se cambia el Cuerpo --}}
                 <div class="form-group" >
                    <input type="text" placeholder="Cuerpo"
                    value="{{novedad.cuerpo}}" class="form-control"
                    name="cuerpo">
                </div>
                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
        </div>
        {{#if error}}
        <h5>{{message}}</h5>
        {{/if}}
    </div>
</div>